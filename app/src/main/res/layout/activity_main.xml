<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_above="@id/linear_holder_id"
        >

        <TextView
            android:id="@+id/text_data_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Capture or choose an image from gallery or camera  to perform OCR"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:textStyle="normal"
            />




    </ScrollView>

    <LinearLayout
        android:id="@+id/linear_holder_id"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button_capture_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"


            android:text="Capture" />

        <Button
            android:id="@+id/button_copy_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:text="Copy"/>




    </LinearLayout>

</RelativeLayout>